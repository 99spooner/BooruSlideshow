{
	"manifest_version": 2,

	"name": "Booru Slideshow",
	"short_name": "Booru SS",
	"description": "View a slideshow from a Booru site based on your search.",
	"version": "4.1",

	"browser_action":
	{
		"default_icon": "bs_icon_19.png",
		"default_popup": "popup.html"
	},
	
	"icons":
	{
		"16": "bs_icon_16.png",
		"48": "bs_icon_48.png",
		"128": "bs_icon_128.png"
	},
	
	"permissions":
	[
		"https://danbooru.donmai.us/",
		"https://e621.net/",
		"http://gelbooru.com/",
		"http://rule34.xxx/",
		"http://safebooru.org/"
	]
}